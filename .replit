modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ninja", "cmake", "git", "curl", "python3", "gcc", "patch", "gnumake", "binutils", "coreutils"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Ultimate Chromium Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "chromium_build_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dry_run_test"

[[workflows.workflow]]
name = "Ultimate Chromium Build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash build-ultimate-chromium.sh"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "chromium_build_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x build-ultimate-chromium.sh && ./build-ultimate-chromium.sh --help"

[[workflows.workflow]]
name = "dry_run_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./build-ultimate-chromium.sh --dry-run"

[workflows.workflow.metadata]
outputType = "console"
